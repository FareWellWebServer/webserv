
server {
	listen 8080
	body_size 10240
	root html/
	method GET POST DELETE
	error_page 404 html/index.html

	server_name config
	timeout 10

	location test/path {
		status_code 200
		method GET POST
		file_path html/index.html
		redirection 300 html/
	}
	
	location .py {
		status_code 200
		cgi_pass cgi/cgi2.py
	}
}

server {
	listen 8081
	body_size 20480
	root html/
	method GET POST
	error_page 500 html/index.html

	server_name default
	timeout 30

	location .py {
		status_code 500
		cgi_pass cgi/cgi.py
	}
}
