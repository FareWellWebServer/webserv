
server {
	listen 8080
	body_size 10240
	root ./asset/static/
	upload_path ./asset/static/
	timeout 10
	method GET POST DELETE
	error_page 404 404.html

	server_name config.com

	location / {
		file_path index.html post.html login.html
		method GET POST
		directory_list off
	}

	location /cgi-bin {
		file_path login.html
		method GET POST
		redirection ./asset/static/index.html
	}

	location /cgi/caesar.py {
		root ./cgi/
		cgi true
		method GET
		cgi_path caesar.py 
	}
}
